<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#FF00EA"
                android:centerColor="#FF8C00"
                android:endColor="#FF0000"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- Warna dalam -->
        </shape>
    </item>
</layer-list>